@model eHospital.Models.Doctor

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Department Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.DEPARTMENT_NAME)
        </dd>

        <dt>
            Doctor Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DR_NAME)
        </dd>

        <dt>
            Qualification
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DR_QUALIFICATION)
        </dd>

        <dt>
            Salary
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DR_SALARY)
        </dd>

        <dt>
            Contact Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DR_CONTACT)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DR_EMAIL)
        </dd>

        <dt>
            Password
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DR_PASSWORD)
        </dd>

        <dt>
           Image
        </dt>

        <dd>
            <img width="250px" height="250px" src="@Url.Content(Model.DR_PIC)" alt="Alternate Text" />
        </dd>

        <dt>
            Fee
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DR_FEE)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.DR_ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

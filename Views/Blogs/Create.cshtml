@model eHospital.Models.Blog

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create","Blogs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Blog</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
       Blog Category
        <div class="col-md-10">
            @Html.DropDownList("CATEGORY_FID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CATEGORY_FID, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        Blog Title
        <div class="col-md-10">
            @Html.EditorFor(model => model.BLOG_TITLE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BLOG_TITLE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Blog Discription
        <div class="col-md-10">
            @Html.EditorFor(model => model.BLOG_DISCRIPTION, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BLOG_DISCRIPTION, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Blog Image
        <div class="col-md-10">
            <input type="file" name="BLOG_IMAGE" required />
            <input type="hidden" name="BLOG_PIC" value="null" />
        </div>
    </div>

    <div class="form-group">
        Blog Date
        <div class="col-md-10">
            <input type="date" name="BLOG_DATE" required />
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


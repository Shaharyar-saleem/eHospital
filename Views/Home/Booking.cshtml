<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-md-3">
            <img src="@Url.Content(Model.DR_PIC)" alt="Alternate Text" style="height: 300px" />
            <table class="mt-4 table table-striped border">
                <tr>
                    <th>Doctor Name:</th>
                    <th>@Model.DR_NAME</th>
                </tr>
                <tr>
                    <th>Qualification:</th>
                    <th>@Model.DR_QUALIFICATION</th>
                </tr>
                <tr>
                    <th>Fee:</th>
                    <th>@Model.DR_FEE</th>
                </tr>
                <tr>
                    <th>Department:</th>
                    <th>@Model.Department.DEPARTMENT_NAME</th>
                </tr>
            </table>

        </div>
        <div class="col-md-9">
            <h3>@Model.DR_NAME's Schedule</h3>
            <table class="table table-striped table-hover table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Day (yyyy-mm-dd)</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Maximum No</th>
                        <th>Available No</th>
                        <th>Time Slot</th>
                        <th>Book</th>
                    </tr>
                </thead>
                @foreach (var sch in schedule)
                {
                    DateTime localDate = DateTime.Now;
                    DateTime scheduleDate = Convert.ToDateTime(@sch.AVAILABLE_DAYS);
                    int result = DateTime.Compare(scheduleDate, localDate);

                    using (Html.BeginForm("Create", "Appointments", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        if (result >= 0 )
                        {
                            decimal remaningNo = @sch.MAX_APPOINTMENTS - @sch.Appointments.Count();
                            <tr>
                                <td>@sch.AVAILABLE_DAYS</td>
                                <td>@sch.START_TIME</td>
                                <td>@sch.END_TIME</td>
                                <td>@sch.MAX_APPOINTMENTS</td>
                                <td>@remaningNo</td>
                                <td>
                                    <input type="hidden" name="APPOINTMENT_DATE" value="@sch.AVAILABLE_DAYS" />
                                    <input type="hidden" name="SCHEDULE_FID" value="@sch.SCHEDULE_ID" />
                                    <select style="width: 100%" name="TIME_SLOT">
                                        <option value="@sch.START_TIME">@sch.START_TIME</option>
                                        <option value="@sch.START_TIME">@sch.END_TIME</option>
                                    </select>
                                </td>
                                <td>
                                    @if (pat != null)
                                    {
                                        if (remaningNo == 0)
                                        {
                                            <p class="alert-danger text-center">Fully Booked</p>
                                        }
                                        else
                                        {
                                            <Input type="submit" value="Reserve" class="btn btn-success btn-md" />
                                        }
                                    }
                                    else
                                    {
                                        <p class="alert-danger text-center">login for Book An Appointment</p>
                                    }

                                </td>
                            </tr>
                        }
                    }
                }
            </table>
        </div>
    </div>
</div>



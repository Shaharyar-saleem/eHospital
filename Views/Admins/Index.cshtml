@model IEnumerable<eHospital.Models.Admin>

@{
    ViewBag.Title = "Index";
}


<h2 class="text-center mt-3">List of Accounts</h2>

<p class="ml-3">
    <a class="btn btn-lg btn-success" href="@Url.Action("Create")">Create New Account</a>
</p>
<table class="table table-hover table-striped">
    <tr class="table-dark">
        <th>
            Role
        </th>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Password
        </th>
        <th>
            Contact Number
        </th>
        <th>
            Image
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Admin_Role.ROLE_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ADMIN_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ADMIN_EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ADMIN_PASSWORD)
        </td>
        <td>
            @item.ADMIN_CONTACT.ToString()
        </td>
        <td>
            <img width="65px" height="65px" src="@Url.Content(item.ADMIN_PIC)" alt="Alternate Text" />
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id= item.ADMIN_ID })" class="btn btn-primary">Edit</a> |
            <a href="@Url.Action("Details", new { id= item.ADMIN_ID })" class="btn btn-success">Detail</a> |
            <a href="@Url.Action("Delete", new { id= item.ADMIN_ID })" class="btn btn-danger">Delete</a>
 
        </td>
    </tr>
}

</table>

@model eHospital.Models.Patient

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<!-- ***** Breadcumb Area Start ***** -->
<section class="breadcumb-area bg-img gradient-background-overlay" style="background-image: url(/Content/Customer/img/bg-img/breadcumb2.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcumb-content">
                    <h3 class="breadcumb-title">Registration</h3>
                    <p>Your data will never disclose</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Breadcumb Area End ***** -->
<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="contact-form">
                @using (Html.BeginForm("Create", "Patients", FormMethod.Post, new { enctype = "multipart/form-data", @class = "registration-form" }))
                {
                    @Html.AntiForgeryToken()
                        <div class="row mx-1 py-4 mb-4">
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" id="contact-name" placeholder="Name" name="PATIENT_NAME">
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" id="contact-email" placeholder="Email" name="PATIENT_EMAIL">
                                </div>
                            </div>

                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    @ViewBag.Message
                                    <label>Password</label>
                                    <input type="password" class="form-control" id="contact-email" placeholder="Password" name="PATIENT_PASSWORD">
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>Repeat Password</label>
                                    <input type="password" class="form-control" id="contact-email" placeholder="Repeat Password" name="PATIENT_PASSWORD_REPEAT">
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>Contact Number</label>
                                    <input type="number" class="form-control" id="contact-email" placeholder="Cell Number" name="PATIENT_CONTACT">
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>Date of Birth</label>
                                    <input type="date" class="form-control" id="contact-email" placeholder="Date of Birth" name="PATIENT_DOB">
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>Atach Profile Image</label>
                                    <input type="file" class="form-control" id="contact-email" placeholder="Profile Image" name="PATIENT_IMAGE">
                                    <input type="hidden" name="PATIENT_PIC" value="null">
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <div class="form-group">
                                    <label>City</label>
                                    <input type="text" class="form-control" id="contact-email" placeholder="City" name="PATIENT_CITY">
                                </div>
                            </div>
                            <div class="col-lg-12 col-sm-12">
                                <div class="form-group">
                                    <label>Gender</label><br />
                                    <label class="radio-inline">
                                        <input type="radio" name="PATIENT_GENDER" value="Male"> Male
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="PATIENT_GENDER" value="Female"> Female
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="PATIENT_GENDER" value="Others"> Others
                                    </label>
                                </div>

                            </div>
                            <div class="col-lg-12 col-sm-12">
                                <button type="submit" class="btn medilife-btn" style="width: 100%;">Register Patient <span>+</span></button>
                            </div>
                        </div>
                }

            </div>
        </div>
    </div>
</div>



@model IEnumerable<eHospital.Models.Admin_Role>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center mt-3">Admin Role</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success btn-lg ml-3">Create Role</a>
</p>
<table class="table table-striped">
    <tr class="table-dark">
        <th>
            Role Name
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ROLE_NAME)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id= item.ROLE_ID })" class="btn btn-primary">Edit</a> |
            <a href="@Url.Action("Details", new { id= item.ROLE_ID })" class="btn btn-success">Detail</a> |
            <a href="@Url.Action("Delete", new { id= item.ROLE_ID })" class="btn btn-danger">Delete</a>
        </td>
    </tr>
}

</table>

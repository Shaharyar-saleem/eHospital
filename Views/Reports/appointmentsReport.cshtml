@using eHospital.Models
@model IEnumerable<eHospital.Models.Appointment>
@{ 
    Model1 db = new Model1();
    
    decimal totalAmount =0;
}

    <div class="container-fluid" id="GFG">
        <h1 class="text-center my-4">Appointments Report</h1>
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("appointmentsReport", "Reports", FormMethod.Post))
                {
                    <table class="table table-bordered">
                        <tr>
                            <td>Date From:</td>
                            <td><input type="datetime-local" name="DateFrom" value="@ViewBag.DateFrom" class="form-control" /></td>
                            <td>Date To:</td>
                            <td><input type="datetime-local" name="DateTo" value="@ViewBag.DateTo" class="form-control" /></td>
                            <td><input type="submit" name="name" value="Generate Report" class="btn btn-primary btn-block" id="btn1" /></td>
                        </tr>
                        <tr>
                            <td>Department:</td>
                            <td>@Html.DropDownList("Department", ViewBag.Department as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })</td>
                            <td>Doctor:</td>
                            <td>@Html.DropDownList("Doctor", ViewBag.Doctor as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })</td>
                            <td><input type="button" onclick="printDiv()" name="name" value="Print Report" class="btn btn-primary btn-block" id="btn2" /></td>
                        </tr>
                    </table>
                }
            </div>
        </div>
        <table class="table table-striped table-hover">
            <tr class="table-dark" style="background:#2c3034; color: white;">
                <th>ID</th>
                <th>Date</th>
                <th>Patient Name</th>
                <th>Patient City</th>
                <th>Patient Cell</th>
                <th>Doctor Name</th>
                <th>Department</th>
                <th>Status</th>
                <th>Fee</th>
            </tr>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.APPOINTMENT_ID</td>
                    <td>@appointment.APPOINTMENT_DATE.ToLongDateString()</td>
                    <td>@appointment.Patient.PATIENT_NAME</td>
                    <td>@appointment.Patient.PATIENT_CITY</td>
                    <td>@appointment.Patient.PATIENT_CONTACT</td>
                    <td>@appointment.Doctor_Schedule.Doctor.DR_NAME</td>
                    <td>@appointment.Doctor_Schedule.Doctor.Department.DEPARTMENT_NAME</td>
                    <td>@appointment.STATUS</td>
                    <td>@appointment.Doctor_Schedule.Doctor.DR_FEE</td>
                </tr>
                totalAmount = totalAmount + @appointment.Doctor_Schedule.Doctor.DR_FEE;
            }
            <tr class="table-light">
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><b>Total Amount:</b></td>
                <td style="color: green"><b>@totalAmount</b></td>
            </tr>
        </table>

    </div>
    <script>
        function printDiv() {
            var divContents = document.getElementById("GFG").innerHTML;
            var a = window.open('', '', 'height=500, width=1100');
            a.document.write('<html>');
            a.document.write('<body > <center><img src="../Content/Customer/img/ehospital2.png" style="height: 65px;"><center> <br>');
            a.document.write(divContents);
            a.document.getElementById("btn1").style.display = 'none';
            a.document.getElementById("btn2").style.display = 'none';
            a.document.write('</body></html>');
            a.document.close();
            a.print();
        }
    </script>
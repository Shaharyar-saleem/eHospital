@model IEnumerable<eHospital.Models.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Dept
        </th>
        <th>
            Name
        </th>
        <th>
            Qualification
        </th>
        <th>
            Salary
        </th>
        <th>
            Contact
        </th>
        <th>
            Email
        </th>
        <th>
            Password
        </th>
        <th>
            Image
        </th>
        <th>
            Fee
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Department.DEPARTMENT_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DR_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DR_QUALIFICATION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DR_SALARY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DR_CONTACT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DR_EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DR_PASSWORD)
        </td>
        <td>
            
             <img width="50px" height="50px" src="@Url.Content(item.DR_PIC)" alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DR_FEE)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DR_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DR_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DR_ID })
        </td>
    </tr>
}

</table>

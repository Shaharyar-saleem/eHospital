@model eHospital.Models.Blood_Doners

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}


<!-- ***** Breadcumb Area Start ***** -->
<section class="breadcumb-area bg-img gradient-background-overlay" style="background-image: url(/Content/Customer/img/bg-img/breadcumb2.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcumb-content">
                    <h3 class="breadcumb-title">Dooner Registration</h3>
                    <p>Your data will never disclose</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Breadcumb Area End ***** -->
<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="contact-form">
                @using (Html.BeginForm("Create", "Blood_Doners", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                <div class="row mx-1 py-4 mb-4">
                    <div class="col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label>Doner Name</label>
                            <input type="text" class="form-control" id="contact-name" placeholder="Name" name="DONER_NAME">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label>Doner Email</label>
                            <input type="email" class="form-control" id="contact-email" placeholder="Email" name="DONER_EMAIL">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label>Contact Number</label>
                            <input type="number" class="form-control" id="contact-email" placeholder="Cell Number" name="DONER_CONTACT">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label>Date of Birth</label>
                            <input type="date" class="form-control" id="contact-email" placeholder="Date of Birth" name="DONER_DOB">
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label>Blood Group</label>
                            <select name="BLOOD_GROUP">
                                <option value="A+">A+</option>
                                <option value="B+">B+</option>
                                <option value="O+">O+</option>
                                <option value="AB+">AB+</option>
                                <option value="O-">O-</option>
                                <option value="A-">A-</option>
                                <option value="Not Sure">Not Sure</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label>City</label>
                            <input type="text" class="form-control" id="contact-email" placeholder="City" name="DONER_CITY">
                        </div>
                    </div>
                    <div class="col-lg-12 col-sm-12">
                        <div class="form-group">
                            <label>Gender</label><br />
                            <label class="radio-inline">
                                <input type="radio" name="DONER_GENDER" value="Male"> Male
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="DONER_GENDER" value="Female"> Female
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="DONER_GENDER" value="Others"> Others
                            </label>
                        </div>
                        <input type="hidden" name="DONER_STATUS" value="Pending" />
                        
                    </div>
                    <div class="col-lg-12 col-sm-12">
                        <button type="submit" class="btn medilife-btn" style="width: 100%;">Register Blood Doner <span>+</span></button>
                    </div>
                </div>
                }

            </div>
        </div>
    </div>
</div>





